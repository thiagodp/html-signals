{
  "name": "html-signals",
  "version": "0.11.0",
  "description": "HTML properties to reduce the need of writing JavaScript code",
  "author": "Thiago Delgado Pinto",
  "keywords": [
    "html",
    "library",
    "signal",
    "property",
    "spa",
    "json"
  ],
  "license": "MIT",
  "repository": {
    "url": "https://github.com/thiagodp/html-signals"
  },
  "files": [
    "dist/*"
  ],
  "type": "module",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.umd.js",
  "umd:main": "dist/index.umd.js",
  "browser": "dist/index.umd.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.esm.js"
    }
  },
  "scripts": {
    "test": "vitest run --dir test",
    "test:watch": "vitest --dir test",
    "build": "microbundle",
    "build:watch": "microbundle --watch",
    "build:release": "rimraf dist && microbundle --no-sourcemap"
  },
  "devDependencies": {
    "@fetch-mock/vitest": "^0.2.13",
    "@playwright/test": "^1.51.1",
    "@types/jsdom": "^21.1.7",
    "fetch-mock": "^12.5.2",
    "jsdom": "^26.0.0",
    "microbundle": "^0.15.1",
    "node-fetch": "^3.3.2",
    "rimraf": "^6.0.1",
    "vitest": "^3.0.8"
  }
}
